{% extends 'BaseTemplate/base.html.twig' %}
{% block title %}Delete Student{% endblock %}
{% block body %}
<h3>Choose a Student to Delete</h3>
<form action="/iot/deleteStudent" method="POST">
    <div class="form-row">
        <div class="form-group col-md-8">
            <select class="form-control" id="studentOption" name="studentOption" placeholder="choose a student">
                {% for student in students %}
                    <option value="{{ student.idStudent }}">{{ student.lastname }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group col-auto">
            <button type="submit" class="btn btn-danger" id="sendStudent">Delete</button>
        </div>
    </div>
</form>
{% endblock %}