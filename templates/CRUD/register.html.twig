{% extends "BaseTemplate/base.html.twig" %}
{% block title %}Register Page{% endblock %}

{% block body %}
    <h2>Student Registration</h2>
    <form action="/iot/registerStudent" method="POST">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="txtFirstName">First Name</label>
                <input type="text" class="form-control" id="txtFirstName" name="txtFirstName" placeholder="First name">
            </div>
            <div class="form-group col-md-6">
                <label for="txtLastName">Last Name</label>
                <input type="text" class="form-control" id="txtLastName" name="txtLastName" placeholder="Last name">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label class="txtEmail">Email</label>
                <input type="email" class="form-control" id="txtEmail" name="txtEmail" placeholder="Email">
            </div>
            <div class="form-group col-md-6">
                <label for="txtPhone">Phone Number</label>
                <input type="tel" class="form-control" id="txtPhone" name="txtPhone" placeholder="Pattern: 00-0000-0000" pattern="[0-9]{2}-[0-9]{4}-[0-9]{4}">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label class="txtCareer">Career</label>
                <input type="text" class="form-control" id="txtCareer" name="txtCareer" placeholder="Career">
            </div>
            <div class="form-group col-md-6">
                <label class="txtStudentsNumber">Student's Number</label>
                <input type="text" class="form-control" id="txtStudentsNumber" name="txtStudentsNumber" placeholder="Student's Number" maxlength="9">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="isActive">Are you an active student?</label>
                <select class="form-control" name="isActive">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </select>
            </div>
            <div class="form-group col-md-6">
                <label for="isActive">Are you in article 34?</label>
                <select class="form-control" name="isArticle34">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </select>
            </div>
        </div>
        <button type="submit" class="btn btn-success">Send</button>
    </form>
{% endblock %}