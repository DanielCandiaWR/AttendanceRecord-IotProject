<form action="/iot/chageStudent" method="POST">
    <div class="form-row">
        <div class="form-group col-md-2">
            <label for="txtIdStudent">Id Student</label>
            <input type="text" class="form-control" id="txtIdStudent" name="txtIdStudent" placeholder="Id" value="{{ student.0.idStudent }}" readonly>
        </div>
        <div class="form-group col-md-5">
            <label for="txtFirstName">First Name</label>
            <input type="text" class="form-control" id="txtFirstName" name="txtFirstName" placeholder="First name" value="{{ student.0.firstname }}">
        </div>
        <div class="form-group col-md-5">
            <label for="txtLastName">Last Name</label>
            <input type="text" class="form-control" id="txtLastName" name="txtLastName" placeholder="Last name" value="{{ student.0.lastname }}">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label class="txtEmail">Email</label>
            <input type="email" class="form-control" id="txtEmail" name="txtEmail" placeholder="Email" value="{{ student.0.email }}">
        </div>
        <div class="form-group col-md-6">
            <label for="txtPhone">Phone Number</label>
            <input type="tel" class="form-control" id="txtPhone" name="txtPhone" placeholder="Phone" pattern="[0-9]{2}-[0-9]{4}-[0-9]{4}" value="{{ student.0.phoneNumber }}">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label class="txtCareer">Career</label>
            <input type="text" class="form-control" id="txtCareer" name="txtCareer" placeholder="Career" value="{{ student.0.career }}">
        </div>
        <div class="form-group col-md-6">
            <label class="txtStudentsNumber">Student's Number</label>
            <input type="text" class="form-control" id="txtStudentsNumber" name="txtStudentsNumber" placeholder="Student's Number" maxlength="9" value="{{ student.0.studentsNumber }}">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="isActive">Active</label>
            <select class="form-control" name="isActive">
                    {% if student.0.isActive == false %}
                        <option selected="true" value="0">No</option>
                    {% else %}
                        <option selected="true" value="1">Yes</option>
                    {% endif %}
                <option value="1">Yes</option>
                <option value="0">No</option>
            </select>
        </div>
        <div class="form-group col-md-6">
            <label for="isActive">Article 34</label>
            <select class="form-control" name="isArticle34">
                    {% if student.0.isArticle34 == false %}
                        <option selected="true" value="0">No</option>
                    {% else %}
                        <option selected="true" value="1">Yes</option>
                    {% endif %}
                <option value="1">Yes</option>
                <option value="0">No</option>
            </select>
        </div>
    </div>
    <button type="submit" class="btn btn-info">Update Information</button>
</form>